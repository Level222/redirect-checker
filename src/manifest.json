{
  "manifest_version": 3,
  "name": "Redirect Checker",
  "version": "1.0.0",
  "description": "Add a button to the context menu to check the redirect destination of the link.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "webRequest",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  }
}
